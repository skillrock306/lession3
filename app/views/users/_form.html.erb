<div class="container">
  <div class="row">
    <h1 class="title">Sign up</h1>
  </div>
  <div class="row" >
    <div class="col-lg-offset-4 col-lg-9">
              <%= form_with(model: user, local: true) do |form| %>
                <% if user.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

                    <ul>
                      <% user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                  <div class="form-group">
                      <%= form.label :name %>
                      <%= form.text_field :name, class: 'form-control',style: 'width:300px' %>
                  </div>
                <div class="form-group">
                    <%= form.label :email %>
                    <%= form.text_field :email, class: 'form-control',style: 'width:300px' %>
                </div>
                <div class="form-group">
                      <%= form.label :password %>
                      <%= form.password_field :password, class: 'form-control',style: 'width:300px' %>
                </div>
                <div class="form-group">
                    <%= form.label :ConfirmPassword %>
                    <%= form.password_field :password_confirmation, class: 'form-control',style: 'width:300px' %>
                </div>
                <div class="actions">
                  <%= form.submit 'Sign Up' , class: 'btn btn-info my-4',style: 'width:100px;' %>
                  <%= link_to 'Home', root_path, class: 'btn btn-info my-4' %>
                </div>
              <% end %>
            <div>
              Already have an account?
              <%= link_to "Sign In", login_path %>
            </div>
      </div>
  </div>
</div>