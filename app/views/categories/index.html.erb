<%= render 'admindivide/navigation' %>

<div class="container">
  <h1><strong>Categories</strong></h1>
  <div class="table-responsive">
      <table class="table" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th><%= link_to 'New Category', new_category_path, class: 'btn btn-info btn-sm' %></th>
            </tr>
        </thead>
        <tbody>    
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.cate_name %></td>
              <td><%= link_to 'Show', category, class: 'btn btn-primary btn-round btn-just-icon btn-sm' %>
                  <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-success btn-round btn-just-icon btn-sm' %>
                  <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-round btn-just-icon btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>

