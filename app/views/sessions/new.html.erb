<div class="container">
  <div class="row">
    <!-- <%= debug(params) %> -->
    <h1 class="title">Login</h1>
  </div>
  <div class="row">
    
    <div class="col-lg-offset-3 col-lg-6">
      <% if flash[:notice] %>
        <div class="alert alert-danger"><%= flash[:notice] %></div>
      <% end %>
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "Enter your Email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: "Enter your password",
            class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit "Login", class: "btn btn-info col-lg-6" %>
          <%= link_to 'Home', root_path, class: 'btn btn-info col-lg-6' %>
        </div>
        <div class="text-right">
          <%= link_to "Register", new_user_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>